programa
{
	
real larg, comp, terreno
	funcao inicio()
	{
		escreva (" Digite a largura do terreno:\n")
		leia(larg)
		
		escreva (" Digite o comprimento do terreno\n")
		leia (comp)
		
		terreno = calculaArea (larg)
		escreva (" A área do terreno  é "+ terreno+"m²")
		
	}
	funcao real calculaArea(real a) {
			real area = 0.0
			area = larg * comp
			retorne area
				
	}
}
		
